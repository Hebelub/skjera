@model IEnumerable<Comment>




<h1 align:center> Posts </h1>
<div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>
            ID
        </th>
        
        <th>
            Text
        </th>
        <th>
            User
        </th>
        <th>
            UserId
        </th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var comment in Model)
    {
        <tr>
            <td width:15%;>
                @comment.Id
            </td>
            <td width:25%>
                @comment.Text
                
            </td>
            <td width:50%>
                @comment.User
            </td>
            <td width:10%>
                @comment.UserId
            </td>
                
            <td>
                <div>
                    <a class="nav-link text-dark" asp-area="" asp-controller="comment" asp-action="Edit" asp-route-id="@comment.Id"> <i class="bi bi-cloud-plus-fill"> </i>Edit</a>
                </div>
            </td>
        </tr>
            
           
    }

    </tbody>
    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="Create" > <i class="bi bi-cloud-plus-fill"> </i>add Post</a>
    </div>
</table>
</div>