@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager;


@model Comment

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

@{
    var user = await UserManager.GetUserAsync(User);
    var userOrganizationRelation = user?.GetRelationToOrganizationAsync(Model.EventModelId).Result ?? new UserOrganization();
}

<h1>Comment</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Text)
        </dd>
     
    </dl>
</div>
<div>
    @if (userOrganizationRelation.AccessRight.CanEditEvents)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-eventModel="@Model"  class="btn btn-warning">Edit</a>
        <span>|</span>
    }
    @if (userOrganizationRelation.AccessRight.CanDeleteEvents)
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <span>|</span>
    }

   

</div>
