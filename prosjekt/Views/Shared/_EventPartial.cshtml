@using Microsoft.CodeAnalysis.VisualBasic.Syntax
@model EventModel

 <div class="Event_card" id="Event"> <div>
         <img src="https://i.eurosport.com/2022/08/11/3430724-69999649-640-480.jpg" alt="hmm" class="center" id="profile_pic">
          <div class="header"> 
                 <h2 class="text-center"> @Model.Organizer.Name </h2> 
        
                 <h1 class="text-center">
                     <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id"> @Model.Title </a> 
                   </h1> 
              </div> 
              @if (Model.StartTime.HasValue) 
                 { 
                     <p class="text-center"> @Model.StartTime</p> 
                     @if (Model.EndTime.HasValue) 
                     { 
                         <p class="text-center"> until @Model.EndTime</p> 
                     } 
                 } 
                 @if (Model.Location != null)
                 {
                 <div class="row_in_row">
                     location: @Model.Location
                 </div>
                 }
                    <div class="text-center">
                        <a asp-controller="Organization" asp-action="Details" asp-route-id="@Model.Organizer.Id">
                            <button class="row_top_and_bottom"> Hosted by @Model.Organizer.Name </button>
                        </a>
                        </div>
             </div>
 </div>
