@model UserOrganization

<link rel="stylesheet" href="~/css/OrganizationCard.css"/>

<div class="card">

    <div class="imgBox">
        <img src="img/uialogo.png" alt="Picture">
    </div>

    <div class="content">
        <div class="details">
            <h2>@Model.Organization.Name</h2>
            <div class="data">
                <h3>
                    <span>
                        <!--  <div class="text-center" id="toscroll">
                            Html.Raw(Model.Organization.Description)
                        </div> -->
                        this is for the short discription of the organizatio for details click the details button
                    </span>
                </h3>
            </div>


            <div class="actionBtn">
                <a asp-action="Details" asp-route-id="@Model.Organization.Id" class="btn-primary">Details</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <script>
                        function follow(buttonEl, id) {
                            let following = buttonEl.innerHTML === "Following";
                            
                            if (following) {
                                buttonEl.className = "btn btn-outline-primary";
                                buttonEl.innerHTML = "Follow";
                            }
                            else {
                                buttonEl.className = "btn btn-primary";
                                buttonEl.innerHTML = "Following";
                            }
                            
                            console.log("Ye", following);
                            
                            followOrganization(id, !following);
                        }
                    </script>

                    if (Model.IsFollowing)
                    {
                        <button
                            class="btn btn-primary"
                            onClick="follow(this, @Model.Organization.Id)">
                            Following
                        </button>
                    }
                    else
                    {
                        <button
                            class="btn btn-outline-primary"
                            onClick="follow(this, @Model.Organization.Id, @Json.Serialize(Model.IsFollowing) === false)">
                            Follow
                        </button>
                    }


                    <br/>
                }
            </div>
        </div>
    </div>
</div>


@if (Model.AccessRight.HasAnyAccess)
{
    <span>You Have Accessrights here</span>
}